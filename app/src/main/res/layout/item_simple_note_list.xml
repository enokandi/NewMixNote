<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">
        <ImageView
                android:id="@+id/recycle_line_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_text"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/recycle_image"
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_text"/>
                <TextView
                        android:id="@+id/recycle_title"
                        android:gravity="center|start"
                        android:layout_width="match_parent"
                        android:paddingTop="9dp"
                        android:paddingBottom="10dp"
                        android:layout_height="match_parent"
                        android:text="Shoping List"
                        android:textColor="@color/colorBlack"
                        android:textSize="22sp"
                        android:fontFamily="@font/timesnewroman"
                        android:paddingEnd="2dp"
                        android:paddingStart="0dp" />
            </LinearLayout>

            <TextView
                    android:id="@+id/recycle_text"
                    android:paddingStart="5dp"
                    android:paddingEnd="2dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="5dp"
                    android:fontFamily="@font/timesnewroman"
                    android:text="hggfh"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

